<% provide(:title, @user.username) %>
<div class="row">
 
  
  <div class="col-md-12">
    <h1> <%= @user.username %></h1>
    <h2> <%= @user.email %></h2>
    <hr />
    <% if @user.events.any? %>
      <div class="posts">
      <h1>Events</h1>
        
      <% @user.events.each do |event| %>
        <p>
          <p><%= link_to  event.location, event %></p>
          <p><%= event.date %></p>
          <p><%= event.description%></p>
        </p>
        <hr />
      <% end %>
    <% else %>
        <h3><%= @user.username %> does not have any events</h3>
     <% end %>
  </div>
  
</div>
